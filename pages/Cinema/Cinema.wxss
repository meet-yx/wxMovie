/*----------------------------------------- 公共头部 ------------------------------------*/

.title {
  height: 50px;
  background-color: #2a2a34;
  color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.searchBox {
  width: 260px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(92, 92, 115, 0.5);
  border-radius: 150px;
}

.search {
  width: 230px;
  height: 30px;
  color: #fff;
  font-size: 16px;
}

.chose {
  width: 100%;
  height: 200px;
  /* background-color: gray; */
  display: flex;
}
.banner{
  width:100%;
  height: 200px;
}
.chose image{
  width:100%;
  height: 200px;
}


/* -----------------------------------中间影院--------------------------------------- */
.cinema {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  /* border:1px solid red; */
}

.cinemabgc {
  width: 100%;
  height: 140px;
  background-color:#fff;
  border-bottom: 1px solid #000;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  border-radius: 10px;
}

.locaword {
  width: 90%;
  height: 135px;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  background-color:#fff;
  opacity: 0.8;
}

.Ctitle {
  width: 100%;
  font-size: 20px;
  color: #000;
}

.box text{
  display: block;
  padding:10px 0;
  height: 55px; 
}
.Cadddress {
  width: 100%;
  font-size: 14px;
  color: gray;
   display: flex;
  flex-direction: row;
  align-items: flex-start;
}
.Category {
  font-size: 20px;
  color: skyblue;
  display: flex;
  align-content: flex-start;
  align-items: center;
  order:3;
}


